// Contribute overlay

.contribute-button
  cursor: pointer

.contribute
  background: $gradient-purple
  color: white
  display: flex
  align-items: center
  justify-content: center

  .container
    max-width: 500px
    margin: 0 20px
    padding: 20px
    height: auto
    border: 3px solid white
    border-radius: 2px
    text-align: center

    h1
      margin-bottom: 20px
      font-size: 30px
      font-weight: $font-weight-bold

    & :last-child
      margin-bottom: 0

.contribute-links a
  display: block
  margin-bottom: 10px
  padding: 10px
  padding-left: 45px
  background: black(.2) no-repeat 10px center
  background-size: auto 25px
  text-align: left
  text-decoration: none !important
  
  &:hover
    background-color: black(.3)

  &.email
    background-repeat: no-repeat
    background-image: linear-gradient(to right, white 2px, transparent 2px),
                      linear-gradient(to left, white 2px, transparent 2px),
                      linear-gradient(to top, white 2px, transparent 2px),
                      linear-gradient(to bottom, white 2px, transparent 2px),
                      radial-gradient(circle at 50% -10%, transparent 9.5px, white 10px, white 12px, transparent 12.5px)
    background-size: 25px 20px
    background-position: 10px 50%
  &.github
    background-image: url('/social-github.svg')
  &.coffee
    margin-top: 10px
    background-image: url('/coffee.svg')
    background-position-x: 14px

@media screen and (max-height: 470px)

  .contribute
    padding: 20px
    display: block

    .container
      margin: 30px auto 0
